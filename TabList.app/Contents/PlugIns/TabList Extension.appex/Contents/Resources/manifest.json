{
  "manifest_version": 3,
  "name": "Safari Tab Switcher",
  "version": "1.0",
  "description": "List and switch to any open tab",
  "permissions": ["tabs"],
  "background": {
    "scripts": ["background.js"],
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "host_permissions": ["<all_urls>"]
}